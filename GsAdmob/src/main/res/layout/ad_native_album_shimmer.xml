<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/ad_shimmer_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ads_bg_shimmer_album">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="7dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ad_app_icon_album_shimmer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ads_bg_shimmer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_headline_album_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/ads_bg_shimmer"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColor="@color/ads_text_color_headline_album"
                android:textSize="@dimen/ads_text_size_headline_album"
                app:layout_constraintBottom_toTopOf="@id/ad_attribution_album_shimmer"
                app:layout_constraintEnd_toEndOf="@id/ad_call_to_action_album_shimmer"
                app:layout_constraintStart_toStartOf="@id/ad_call_to_action_album_shimmer"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_attribution_album_shimmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/ads_bg_text_ad_album"
                android:includeFontPadding="false"
                android:text="AD"
                android:textColor="@color/ads_text_color_attribution_album"
                android:textSize="@dimen/ads_text_size_attribution_album"
                app:layout_constraintBottom_toTopOf="@id/ad_call_to_action_album_shimmer"
                app:layout_constraintStart_toStartOf="@id/ad_call_to_action_album_shimmer"/>

            <RatingBar
                android:id="@+id/ad_stars_album_shimmer"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/ads_bg_shimmer"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/ads_RatingBar"
                app:layout_constraintBottom_toBottomOf="@id/ad_attribution_album_shimmer"
                app:layout_constraintStart_toEndOf="@id/ad_attribution_album_shimmer"
                app:layout_constraintTop_toTopOf="@id/ad_attribution_album_shimmer"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_body_album_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/ads_bg_shimmer"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColor="@color/ads_text_color_body_album"
                android:textSize="@dimen/ads_text_size_body_album"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/ad_attribution_album_shimmer"
                app:layout_constraintEnd_toEndOf="@+id/ad_headline_album_shimmer"
                app:layout_constraintStart_toEndOf="@id/ad_stars_album_shimmer"
                app:layout_constraintTop_toTopOf="@+id/ad_attribution_album_shimmer"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_call_to_action_album_shimmer"
                android:layout_width="0dp"
                android:layout_height="@dimen/ads_height_call_to_action_album"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="11dp"
                android:background="@drawable/ads_bg_shimmer"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textAllCaps="@bool/ads_call_button_album_textAllCaps"
                android:textColor="@color/ads_text_color_call_button_album"
                android:textSize="@dimen/ads_text_size_call_to_action_album"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ad_app_icon_album_shimmer"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</FrameLayout>