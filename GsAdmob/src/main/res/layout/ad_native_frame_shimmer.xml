<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_view_frame_shimmer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/viewBound_shimmer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ads_bg_shimmer"/>
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ad_headline_frame_shimmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ads_bg_shimmer"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/ads_text_color_headline_frame"
            android:textSize="@dimen/ads_text_size_headline_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewBound_shimmer"
            app:layout_constraintTop_toTopOf="@id/viewBound_shimmer"/>

        <RatingBar
            android:id="@+id/ad_stars_frame_shimmer"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/ads_bg_shimmer"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/adsRatingBar"
            app:layout_constraintBottom_toBottomOf="@id/ad_attribution_frame_shimmer"
            app:layout_constraintStart_toEndOf="@id/ad_attribution_frame_shimmer"
            app:layout_constraintTop_toTopOf="@id/ad_attribution_frame_shimmer"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ad_attribution_frame_shimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/ads_bg_text_ad_frame"
            android:includeFontPadding="false"
            android:text="AD"
            android:textColor="@color/ads_text_color_attribution_frame"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="@id/ad_headline_frame_shimmer"
            app:layout_constraintTop_toBottomOf="@id/ad_headline_frame_shimmer"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ad_body_frame_shimmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/ads_bg_shimmer"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="viewStart"
            android:textColor="@color/ads_text_color_body_frame"
            android:textSize="@dimen/ads_text_size_body_frame"
            app:layout_constraintEnd_toEndOf="@id/ad_headline_frame_shimmer"
            app:layout_constraintStart_toStartOf="@id/viewBound_shimmer"
            app:layout_constraintTop_toBottomOf="@id/ad_attribution_frame_shimmer"/>

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media_frame_shimmer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:background="@drawable/ads_bg_shimmer"
            android:minHeight="120dp"
            app:layout_constraintBottom_toTopOf="@id/ad_call_to_action_frame_shimmer"
            app:layout_constraintTop_toBottomOf="@id/ad_body_frame_shimmer"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ad_call_to_action_frame_shimmer"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ads_height_call_to_action_frame"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ads_bg_shimmer"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:minWidth="96dp"
            android:textColor="@color/ads_text_color_call_button_frame"
            android:textSize="@dimen/ads_text_size_call_to_action_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>