<?xml version="1.0" encoding="utf-8"?>
<com.core.gscore.view.AspectRatioLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:heightToWidth="@dimen/ads_root_font_heightToWidth">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/ad_shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ads_bg_shimmer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ad_app_icon_shimmer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ads_bg_shimmer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_headline_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="11dp"
                android:background="@drawable/ads_bg_shimmer"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColor="@color/ads_text_color_headline_font"
                android:textSize="@dimen/ads_text_size_headline_font"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ad_call_to_action_shimmer"
                app:layout_constraintStart_toEndOf="@id/ad_app_icon_shimmer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"/>

            <RatingBar
                android:id="@+id/ad_stars_shimmer"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/ads_bg_shimmer"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/ads_RatingBar"
                app:layout_constraintBottom_toBottomOf="@id/ad_attribution_shimmer"
                app:layout_constraintStart_toEndOf="@id/ad_attribution_shimmer"
                app:layout_constraintTop_toTopOf="@id/ad_attribution_shimmer"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_attribution_shimmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/ads_bg_text_ad_font"
                android:includeFontPadding="false"
                android:text="AD"
                android:textColor="@color/ads_text_color_attribution_font"
                android:textSize="@dimen/ads_text_size_attribution_font"
                app:layout_constraintStart_toStartOf="@id/ad_headline_shimmer"
                app:layout_constraintTop_toBottomOf="@id/ad_headline_shimmer"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_body_shimmer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/ads_bg_shimmer"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColor="@color/ads_text_color_body_font"
                android:textSize="@dimen/ads_text_size_body_font"
                app:layout_constraintEnd_toEndOf="@id/ad_headline_shimmer"
                app:layout_constraintStart_toStartOf="@id/ad_headline_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/ad_attribution_shimmer"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_call_to_action_shimmer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ads_height_call_to_action_font"
                android:layout_marginHorizontal="11dp"
                android:background="@drawable/ads_bg_shimmer"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:minWidth="@dimen/ads_minWidth_call_to_action_font"
                android:textAllCaps="@bool/ads_call_button_font_textAllCaps"
                android:textColor="@color/ads_text_color_call_button_font"
                android:textSize="@dimen/ads_text_size_call_to_action_font"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</com.core.gscore.view.AspectRatioLayout>