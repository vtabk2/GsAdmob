<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_edit_audio">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDeniedPermissionsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/noti_permission"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/viewLine1"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDeniedPermissionsMessage"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDeniedPermissionsClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/text_close"
        android:textColor="@color/text_color_button"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/viewLine1"
        app:layout_constraintEnd_toStartOf="@id/viewLine1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewLine1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDeniedPermissionsSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/text_settings"
        android:textColor="@color/text_color_button"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/viewLine1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/viewLine1"
        app:layout_constraintTop_toTopOf="@id/viewLine1"/>
</androidx.constraintlayout.widget.ConstraintLayout>